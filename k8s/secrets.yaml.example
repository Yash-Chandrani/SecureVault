apiVersion: v1
kind: Secret
metadata:
  name: securevault-secrets
type: Opaque
data:
  # Replace these placeholder values with your actual base64 encoded secrets
  # Example: echo -n "your-secret" | base64
  database-url: BASE64_ENCODED_DATABASE_URL
  secret-key: BASE64_ENCODED_SECRET_KEY
  azure-keyvault-url: BASE64_ENCODED_KEYVAULT_URL
  azure-tenant-id: BASE64_ENCODED_TENANT_ID
  azure-client-id: BASE64_ENCODED_CLIENT_ID
  azure-client-secret: BASE64_ENCODED_CLIENT_SECRET 